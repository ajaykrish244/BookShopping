<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
  <tr>
    <th>Username</th>
    <th>Name</th>
    <th>Email address</th>
    <th>Address</th>
    <th>Phone number</th>
    <th>Credit card number</th>
    <th colspan="5"></th>
  </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if !user.admin? %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.address %></td>
          <td><%= user.phone_number %></td>
          <td><%= user.credit_card_number %></td>
          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><%= button_to 'Delete', user, method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
  <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New User', new_user_path %>
